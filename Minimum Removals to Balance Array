//  3634. Minimum Removals to Balance Array  //




class Solution(object):
    def minRemoval(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: int
        """
        nums.sort()
        n = len(nums)
        ans = n
        i = 0

        for j in range(n):
            while nums[j] > nums[i] * k:
                i += 1
            ans = min(ans, n - (j - i + 1))

        return ans
