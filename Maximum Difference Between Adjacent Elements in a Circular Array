// Maximum Difference Between Adjacent Elements in a Circular Array //


class Solution {
public:
    int maxAdjacentDistance(vector<int>& nums) {
         int maxDiff = 0;

     for (int i = 0; i < nums.size(); i++) 
      {
        int diff = std::abs(nums[i] - nums[(i + 1) % nums.size()]);
        maxDiff = std::max(maxDiff, diff);
      }

    returnÂ maxDiff;
   }
    
};
