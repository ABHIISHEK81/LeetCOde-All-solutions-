// 3432. Count Partitions with Even Sum Difference  //












class Solution(object):
    def countPartitions(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        n = len(nums)
        if n < 2:
            return 0
						
        total = sum(nums)
        return (n - 1) if (total % 2 == 0) else 0
